<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="424.0" prefWidth="544.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fynnandjonas.chatappfx.UI.MainScreenController">
    <MenuBar VBox.vgrow="ALWAYS">
        <menus>
            <Menu mnemonicParsing="false" text="Settings">
                <items>
                    <MenuItem fx:id="changeUsernameMenu" mnemonicParsing="false" text="change username" />
                    <MenuItem fx:id="changeServerSettingsMenu" mnemonicParsing="false" text="Server settings" />
                    <MenuItem mnemonicParsing="false" text="Close" />
                </items>
            </Menu>
        </menus>
    </MenuBar>
    <ScrollPane fx:id="scollPane" prefHeight="482.0" prefWidth="544.0" VBox.vgrow="ALWAYS" />
    <HBox prefHeight="134.0" prefWidth="544.0" VBox.vgrow="ALWAYS">
        <children>
            <TextField fx:id="messageField" HBox.hgrow="ALWAYS" />
            <Button fx:id="sendMessageButton" mnemonicParsing="false" onAction="#sendMessage" text="Send" HBox.hgrow="ALWAYS" />
        </children>
    </HBox>
</VBox>
